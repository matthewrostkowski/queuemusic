<%= render "layout/header" %>

<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Edit Venue</h1>

  <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
    <%= form_with(model: [:host, @venue], local: true) do |form| %>
      <% if @venue.errors.any? %>
        <div id="error_explanation" class="bg-red-50 border border-red-200 rounded p-4 mb-6">
          <h2 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@venue.errors.count, "error") %> prohibited this venue from being updated:
          </h2>
          <ul class="text-red-700">
            <% @venue.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= form.label :name, "Venue Name *" %>
        <%= form.text_field :name, 
            class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-6">
        <%= form.label :location, "Location" %>
        <%= form.text_field :location,
            class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="mb-6">
        <%= form.label :capacity, "Capacity" %>
        <%= form.number_field :capacity,
            class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div class="flex gap-4">
        <%= form.submit "Update Venue", class: "px-6 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 font-semibold" %>
        <%= link_to "Cancel", host_venue_path(@venue), class: "px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>
</div>