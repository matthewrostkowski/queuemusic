<div class="venue-container">
  <h1><%= @venue.name %></h1>
  
  <div class="venue-info">
    <p>üìç <%= @venue.location %> üë• Capacity: <%= @venue.capacity %></p>
  </div>

  <div class="session-section">
    <% if @active_session %>
      <h2>Active Session</h2>
      <p>Join Code: <strong><%= @active_session.join_code %></strong></p>
      
      <%= button_to "Pause Session", pause_host_queue_session_path(@active_session), method: :patch, class: "btn btn-warning" %>
      <%= button_to "End Session", end_host_queue_session_path(@active_session), method: :patch, class: "btn btn-danger" %>
      <%= button_to "Regenerate Code", regenerate_code_host_venue_path(@venue), method: :patch, class: "btn btn-info" %>
    <% else %>
      <p>No active session running</p>
      <p>Start a session to begin accepting song requests from users</p>
      
      <%= button_to "Start New Session", start_session_host_venue_path(@venue), method: :post, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="venue-settings">
    <h2>Venue Settings</h2>
    <%= link_to "‚úèÔ∏è Edit Venue", edit_host_venue_path(@venue), class: "btn btn-secondary" %>
    <%= button_to "üóëÔ∏è Delete Venue", host_venue_path(@venue), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>

  <%= link_to "‚Üê Back to Venues", host_venues_path %>
</div>

<style>
  .venue-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
  }

  .venue-info {
    font-size: 1.1rem;
