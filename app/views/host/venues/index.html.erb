<%= render "layout/header" %>

<style>
  :root {
    --queue-bg: #050509;
    --queue-bg-soft: #0b0b12;
    --queue-card: #11111b;
    --queue-card-soft: #181825;
    --queue-border: #27272f;
    --queue-border-soft: #313244;
    --queue-text-main: #f9fafb;
    --queue-text-muted: #a1a1aa;
    --queue-accent: #22c55e;
    --queue-accent-soft: rgba(34, 197, 94, 0.16);
    --queue-accent-strong: rgba(34, 197, 94, 0.3);
    --queue-danger: #f97373;
    --queue-radius-lg: 18px;
    --queue-radius-xl: 26px;
    --queue-shadow-soft: 0 24px 60px rgba(0, 0, 0, 0.75);
    --queue-shadow-subtle: 0 14px 35px rgba(0, 0, 0, 0.55);
    --queue-transition-fast: 180ms ease-out;
    --queue-transition-med: 220ms ease-out;
  }

  .host-venues-page {
    min-height: 100vh;
    background: radial-gradient(circle at top left, #22c55e22 0, transparent 35%),
                radial-gradient(circle at bottom right, #4ade8020 0, transparent 45%),
                linear-gradient(to bottom, #020617, #020617, #020617);
    color: var(--queue-text-main);
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text", "Inter", sans-serif;
    padding: 3.5rem 1.5rem 4rem;
    display: flex;
    justify-content: center;
  }

  .host-venues-inner {
    width: 100%;
    max-width: 1120px;
  }

  .host-header {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-bottom: 2.5rem;
  }

  @media (min-width: 768px) {
    .host-header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  .host-title-block small {
    display: block;
    font-size: 0.7rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--queue-text-muted);
    margin-bottom: 0.5rem;
  }

  .host-title-block h1 {
    font-size: 2.05rem;
    font-weight: 650;
    letter-spacing: -0.03em;
    margin: 0;
  }

  @media (min-width: 768px) {
    .host-title-block h1 {
      font-size: 2.35rem;
    }
  }

  .host-title-block p {
    margin-top: 0.55rem;
    max-width: 32rem;
    font-size: 0.9rem;
    color: var(--queue-text-muted);
    line-height: 1.5;
  }

  .host-actions {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
    align-items: flex-start;
  }

  @media (min-width: 640px) {
    .host-actions {
      align-items: flex-end;
    }
  }

  .host-meta-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.45rem 0.9rem;
    border-radius: 999px;
    border: 1px solid var(--queue-border);
    background: rgba(0, 0, 0, 0.85);
    box-shadow: 0 0 0 1px rgba(24, 24, 37, 0.6);
    font-size: 0.74rem;
    color: var(--queue-text-muted);
  }

  .host-meta-pill-dot {
    width: 7px;
    height: 7px;
    border-radius: 999px;
    background: var(--queue-accent);
    box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.4);
    animation: host-pulse 1.4s infinite;
  }

  @keyframes host-pulse {
    0% { transform: scale(0.95); opacity: 0.7; }
    50% { transform: scale(1.05); opacity: 1; }
    100% { transform: scale(0.95); opacity: 0.7; }
  }

  .host-create-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.7rem 1.4rem;
    border-radius: 999px;
    border: none;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    color: #020617;
    background: linear-gradient(135deg, #22c55e, #4ade80);
    box-shadow: 0 18px 40px rgba(34, 197, 94, 0.35);
    position: relative;
    overflow: hidden;
    transition: transform var(--queue-transition-med), box-shadow var(--queue-transition-med), background var(--queue-transition-fast);
  }

  .host-create-btn::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top left, rgba(255, 255, 255, 0.35), transparent 55%);
    opacity: 0;
    transition: opacity var(--queue-transition-fast);
    pointer-events: none;
  }

  .host-create-btn span {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
  }

  .host-create-btn-icon {
    width: 20px;
    height: 20px;
    border-radius: 999px;
    background: rgba(0, 0, 0, 0.06);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
  }

  .host-create-btn:hover {
    transform: translateY(-1px) translateZ(0);
    box-shadow: 0 24px 56px rgba(34, 197, 94, 0.45);
  }

  .host-create-btn:hover::before {
    opacity: 0.85;
  }

  .host-create-btn:active {
    transform: translateY(1px);
    box-shadow: 0 10px 24px rgba(34, 197, 94, 0.35);
  }

  /* Venues grid */
  .venues-grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 1.3rem;
  }

  @media (min-width: 768px) {
    .venues-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 1100px) {
    .venues-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  /* Venue card */
  .venue-card {
    position: relative;
    overflow: hidden;
    border-radius: var(--queue-radius-lg);
    background: radial-gradient(circle at top left, rgba(34, 197, 94, 0.12) 0, transparent 58%),
                linear-gradient(145deg, var(--queue-card), var(--queue-card-soft));
    border: 1px solid rgba(39, 39, 47, 0.88);
    padding: 1.2rem 1.25rem 1.1rem;
    box-shadow: var(--queue-shadow-subtle);
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
    transform: translateY(0);
    transition: transform var(--queue-transition-med), box-shadow var(--queue-transition-med), border-color var(--queue-transition-med), background-position var(--queue-transition-med);
    background-size: 160% 160%;
  }

  .venue-card::before {
    content: "";
    position: absolute;
    inset: 0;
    opacity: 0;
    background: radial-gradient(circle at 10% 0, rgba(34, 197, 94, 0.2), transparent 55%);
    transition: opacity var(--queue-transition-med);
    pointer-events: none;
  }

  .venue-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--queue-shadow-soft);
    border-color: rgba(34, 197, 94, 0.6);
    background-position: 20% 0%;
  }

  .venue-card:hover::before {
    opacity: 1;
  }

  .venue-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.6rem;
    margin-bottom: 0.3rem;
  }

  .venue-card-title-block {
    min-width: 0;
  }

  .venue-card-title {
    font-size: 1.05rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .venue-card-subtitle {
    margin-top: 0.18rem;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: var(--queue-text-muted);
  }

  .venue-status-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.3rem 0.7rem;
    border-radius: 999px;
    border: 1px solid #16a34a;
    background: rgba(22, 163, 74, 0.1);
    font-size: 0.7rem;
    white-space: nowrap;
  }

  .venue-status-dot {
    width: 7px;
    height: 7px;
    border-radius: 999px;
    background: #22c55e;
  }

  .venue-meta {
    margin-bottom: 0.35rem;
  }

  .venue-row {
    display: flex;
    align-items: flex-start;
    gap: 0.45rem;
    font-size: 0.85rem;
    color: var(--queue-text-muted);
    margin-bottom: 0.25rem;
  }

  .venue-row span:first-child {
    font-size: 1rem;
    line-height: 1.1;
  }

  .venue-row-strong {
    color: var(--queue-text-main);
    font-weight: 500;
  }

  .venue-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: 0.4rem;
  }

  .venue-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.45rem 0.85rem;
    border-radius: 999px;
    font-size: 0.76rem;
    font-weight: 550;
    text-decoration: none;
    cursor: pointer;
    border: 1px solid transparent;
    transition: background-color var(--queue-transition-fast),
                border-color var(--queue-transition-fast),
                color var(--queue-transition-fast),
                transform var(--queue-transition-fast),
                box-shadow var(--queue-transition-fast);
  }

  .venue-btn-manage {
    background: var(--queue-accent);
    color: #020617;
    box-shadow: 0 12px 30px var(--queue-accent-strong);
  }

  .venue-btn-manage:hover {
    background: #4ade80;
    transform: translateY(-1px);
  }

  .venue-btn-edit {
    background: rgba(15, 23, 42, 0.95);
    border-color: var(--queue-border-soft);
    color: var(--queue-text-main);
  }

  .venue-btn-edit:hover {
    border-color: #e5e7eb;
    background: rgba(24, 24, 37, 0.95);
  }

  .venue-btn-delete {
    background: rgba(127, 29, 29, 0.9);
    border-color: rgba(248, 113, 113, 0.3);
    color: #fee2e2;
  }

  .venue-btn-delete:hover {
    background: rgba(248, 113, 113, 0.95);
    color: #111827;
  }

  /* Empty state */
  .empty-state-shell {
    margin-top: 3.2rem;
    display: flex;
    justify-content: center;
  }

  .empty-state {
    max-width: 640px;
    width: 100%;
    border-radius: var(--queue-radius-xl);
    border: 1px dashed rgba(63, 63, 70, 0.85);
    background: radial-gradient(circle at top, rgba(34, 197, 94, 0.15) 0, transparent 55%),
                linear-gradient(145deg, rgba(15, 23, 42, 0.98), rgba(9, 9, 11, 0.98));
    padding: 2.5rem 2.4rem 2.4rem;
    text-align: center;
    position: relative;
    box-shadow: var(--queue-shadow-soft);
    overflow: hidden;
  }

  .empty-state::before {
    content: "";
    position: absolute;
    inset: -40%;
    background-image:
      radial-gradient(circle at 0 0, rgba(34, 197, 94, 0.18), transparent 55%),
      radial-gradient(circle at 100% 100%, rgba(56, 189, 248, 0.18), transparent 55%);
    opacity: 0.5;
    mix-blend-mode: screen;
    pointer-events: none;
  }

  .empty-state-inner {
    position: relative;
  }

  .empty-state-icon {
    margin: 0 auto 0.9rem;
    width: 46px;
    height: 46px;
    border-radius: 1.25rem;
    background: rgba(15, 23, 42, 0.9);
    border: 1px solid rgba(63, 63, 70, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 14px 32px rgba(0, 0, 0, 0.7);
    font-size: 1.35rem;
  }

  .empty-state h2 {
    margin: 0.6rem 0 0.5rem;
    font-size: 1.6rem;
    letter-spacing: -0.025em;
  }

  .empty-state p {
    margin: 0.15rem 0 1.5rem;
    font-size: 0.92rem;
    color: var(--queue-text-muted);
    max-width: 30rem;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.55;
  }

  .empty-state-secondary {
    margin-top: 0.7rem;
    font-size: 0.75rem;
    color: #71717a;
  }

  @media (max-width: 640px) {
    .host-venues-page {
      padding: 2.6rem 1.1rem 3rem;
    }

    .empty-state {
      padding: 2.1rem 1.6rem 2.2rem;
    }
  }
</style>

<div class="host-venues-page">
  <div class="host-venues-inner">
    <div class="host-header">
      <div class="host-title-block">
        <small>Host Dashboard</small>
        <h1>Your Venues</h1>
        <p>
          Spin up venues where the crowd controls the vibe in real time.
          Manage locations, capacity, and queue access from one focused view.
        </p>
      </div>

      <div class="host-actions">
        <% if defined?(@venues) && @venues.respond_to?(:count) %>
          <div class="host-meta-pill">
            <span class="host-meta-pill-dot"></span>
            <span><%= pluralize(@venues.count, "venue") %> ready</span>
          </div>
        <% end %>

        <%= link_to new_host_venue_path, class: "host-create-btn" do %>
          <span>
            <span class="host-create-btn-icon">Ôºã</span>
            <span>Create New Venue</span>
          </span>
        <% end %>
      </div>
    </div>

    <% if @venues.any? %>
      <div class="venues-grid">
        <% @venues.each do |venue| %>
          <article class="venue-card">
            <div class="venue-card-header">
              <div class="venue-card-title-block">
                <h2 class="venue-card-title"><%= venue.name %></h2>
                <div class="venue-card-subtitle">Venue ‚Ä¢ Queue-ready</div>
              </div>

              <div class="venue-status-pill">
                <span class="venue-status-dot"></span>
                <span>Ready for guests</span>
              </div>
            </div>

            <div class="venue-meta">
              <div class="venue-row">
                <span>üìç</span>
                <span>
                  <%= venue.location || "No location set" %>
                </span>
              </div>

              <div class="venue-row">
                <span>üë•</span>
                <span>
                  Capacity:
                  <span class="venue-row-strong">
                    <%= venue.capacity || "No capacity set" %>
                  </span>
                </span>
              </div>
            </div>

            <div class="venue-actions">
              <%= link_to "Manage",
                          host_venue_path(venue),
                          class: "venue-btn venue-btn-manage" %>

              <%= link_to "Edit",
                          edit_host_venue_path(venue),
                          class: "venue-btn venue-btn-edit" %>

              <%= link_to "Delete",
                          host_venue_path(venue),
                          method: :delete,
                          data: { confirm: "Are you sure?" },
                          class: "venue-btn venue-btn-delete" %>
            </div>
          </article>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state-shell">
        <section class="empty-state">
          <div class="empty-state-inner">
            <div class="empty-state-icon">üéõÔ∏è</div>
            <h2>No venues yet</h2>
            <p>
              Create your first venue to let guests join the queue, vote on tracks,
              and keep the room‚Äôs energy exactly where you want it.
            </p>

            <%= link_to new_host_venue_path, class: "host-create-btn" do %>
              <span>
                <span class="host-create-btn-icon">Ôºã</span>
                <span>Create Your First Venue</span>
              </span>
            <% end %>

            <div class="empty-state-secondary">
              You can always update location, capacity, and queue rules later.
            </div>
          </div>
        </section>
      </div>
    <% end %>
  </div>
</div>
