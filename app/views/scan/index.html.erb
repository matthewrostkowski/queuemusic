<div class="min-h-screen bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center p-4">
  <div class="bg-white rounded-lg shadow-2xl p-8 max-w-md w-full" data-testid="scan-page">
    <!-- Spec expects 'Scan' text on the page -->
    <div class="text-center mb-4">
      <h1 class="text-xl font-semibold text-gray-800">Scan</h1>
    </div>

    <div class="text-center mb-8">
      <div class="text-5xl mb-4">ðŸŽµ</div>
      <h2 class="text-3xl font-bold text-gray-800">Queue Music</h2>
      <p class="text-gray-600 mt-2">Enter a venue code to join their music queue and start adding songs!</p>
    </div>

    <% if @error.present? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <p class="text-red-700 font-semibold"><%= @error %></p>
      </div>
    <% end %>

    <%= form_with(url: join_path, method: :post, local: true) do |form| %>
      <div class="mb-6">
        <%= form.label :join_code, "Venue Code", class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= form.text_field :join_code,
            placeholder: "Enter 6-digit code",
            maxlength: 6,
            inputmode: "numeric",
            autofocus: true,
            class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg text-center text-2xl font-mono font-bold tracking-widest focus:outline-none focus:border-green-500",
            autocomplete: "off" %>
        <p class="text-xs text-gray-500 mt-2">Ask the host for the 6-digit code.</p>
      </div>

      <%= form.submit "Join Queue", 
          class: "w-full px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 font-bold text-lg transition" %>
    <% end %>

    <div class="mt-6 pt-6 border-t border-gray-200 text-center space-y-2">
      <p class="text-sm text-gray-600">
        Don't have a code? Visit a participating venue to get one.
      </p>
      <p class="text-sm text-gray-600">
        <%= link_to "Back to Search", search_path, class: "text-green-600 hover:text-green-800 font-semibold" %>
        &nbsp;|&nbsp;
        <%= link_to "Back to Main", mainpage_path, class: "text-green-600 hover:text-green-800 font-semibold" %>
      </p>
    </div>

    <!-- Help section -->
    <div class="mt-8 p-4 bg-green-50 rounded-lg">
      <h3 class="font-semibold text-gray-700 mb-2">How it works:</h3>
      <ol class="text-sm text-gray-600 space-y-1">
        <li>âœ… Enter the venue code</li>
        <li>âœ… Search for songs</li>
        <li>âœ… Add to the queue</li>
        <li>âœ… Vote on songs!</li>
      </ol>
    </div>
  </div>
</div>

<script>
  // Only allow numbers in join_code input
  document.addEventListener('DOMContentLoaded', function() {
    const input = document.querySelector('input[name="join_code"]');
    if (input) {
      input.addEventListener('input', function() {
        this.value = this.value.replace(/[^0-9]/g, '');
      });
    }
  });
</script>
