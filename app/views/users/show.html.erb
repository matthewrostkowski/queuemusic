<% # app/views/users/show.html.erb %>

<div class="profile-container">
  <% if current_user %>
    <div class="profile-header">
      <h1>@<%= current_user.display_name || current_user.email %></h1>
      <p class="user-email"><%= current_user.email %></p>
    </div>

    <div class="profile-stats">
      <div class="stat">
        <span class="stat-label">Songs Queued</span>
        <span class="stat-value"><%= current_user.queue_items.count %></span>
      </div>
      <div class="stat">
        <span class="stat-label">Total Upvotes</span>
        <span class="stat-value"><%= current_user.queue_items.sum(:vote_score) %></span>
      </div>
    </div>

    <div class="profile-songs">
      <h2>Your Songs</h2>
      <% if current_user.queue_items.any? %>
        <ul class="songs-list">
          <% current_user.queue_items.each do |item| %>
            <li class="song-item">
              <div class="song-info">
                <strong><%= item.title %></strong> by <em><%= item.artist %></em>
              </div>
              <div class="song-stats">
                <span class="upvotes"><%= item.vote_score %> upvotes</span>
                <% if item.status %>
                  <span class="status-badge status-<%= item.status %>"><%= item.status.capitalize %></span>
                <% end %>
                <% if item.base_price %>
                  <span class="price"><%= item.base_price %></span>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="empty-state">You haven't queued any songs yet</p>
      <% end %>
    </div>
  <% else %>
    <div class="unauthorized-message">
      <p>You must be logged in to view your profile.</p>
      <%= link_to "Go to Login", login_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  .profile-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
  }

  .profile-header {
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
  }

  .profile-header h1 {
    font-size: 2rem;
    margin: 0;
  }

  .user-email {
    color: #666;
    margin: 0.5rem 0 0;
  }

  .profile-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 8px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-label {
    color: #666;
    font-size: 0.9rem;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: bold;
    color: #333;
  }

  .songs-list {
    list-style: none;
    padding: 0;
  }

  .song-item {
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .song-stats {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: bold;
  }

  .status-played {
    background: #d4edda;
    color: #155724;
  }

  .status-pending {
    background: #fff3cd;
    color: #856404;
  }

  .empty-state {
    text-align: center;
    color: #999;
    padding: 2rem;
    font-style: italic;
  }

  .unauthorized-message {
    text-align: center;
    padding: 2rem;
    background: #f0f0f0;
    border-radius: 8px;
  }
</style>
